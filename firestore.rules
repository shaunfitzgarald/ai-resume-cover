rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Resumes - users can only access their own resumes
      match /resumes/{resumeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Cover Letters - users can only access their own cover letters
      match /coverLetters/{coverLetterId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Templates are publicly readable but only authenticated users can create/update
    match /templates/{templateId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Usage analytics - only authenticated users can create entries
    match /usage/{usageId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Only create, no other operations
    }
    
    // Public templates and examples (if you want to add them later)
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
